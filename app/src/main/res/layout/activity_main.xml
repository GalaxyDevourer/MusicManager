<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_welcome"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/check_group_spinner"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:entries="@array/main_groups_list" />

    <Button
        android:id="@+id/show_group_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onShowBtnClick"
        android:text="@string/main_show_button"
        android:textAlignment="center" />

    <Button
        android:id="@+id/show_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onSearchBtnClick"
        android:text="@string/main_search_button"
        android:textAlignment="center" />

</LinearLayout>